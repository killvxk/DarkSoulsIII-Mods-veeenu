<UserControl x:Class="PracticeTool.Controls.HotkeyEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PracticeTool.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="300">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="1*"/>
    </Grid.ColumnDefinitions>
    <Label Content="{Binding Label}" Grid.Column="0"/>
    <Button Click="Button_Click" Content="{Binding ButtonText}" Grid.Column="1" KeyUp="Button_KeyUp" x:Name="HotkeyButton"/>
  </Grid>
</UserControl>
