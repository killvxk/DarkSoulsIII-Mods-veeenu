<UserControl x:Class="PracticeTool.Controls.DWordControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PracticeTool"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="6*"/>
      <ColumnDefinition Width="4*"/>
      <ColumnDefinition Width="2*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="24"/>
    </Grid.RowDefinitions>

    <Label Grid.Column="0" Content="{Binding Label}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>
    <TextBox Grid.Column="1" PreviewTextInput="EvtPreviewTextInput" Text="{Binding TextValue}" Height="20" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
    <CheckBox Grid.Column="2" IsChecked="{Binding ForceValue}" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
  </Grid>
</UserControl>
