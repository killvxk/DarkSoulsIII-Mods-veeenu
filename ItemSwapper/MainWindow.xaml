<Window x:Class="ItemSwapper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItemSwapper"
        mc:Ignorable="d"
        Title="MainWindow" Height="130" Width="320">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="80"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="32"/>
      <RowDefinition Height="32"/>
      <RowDefinition Height="32"/>
    </Grid.RowDefinitions>

    <Label Grid.Row="0" Grid.Column="0" Content="Current item" HorizontalContentAlignment="Right"/>
    <Label Grid.Row="0" Grid.Column="1" Content="{Binding SelectedItemCode, UpdateSourceTrigger=PropertyChanged}"/>

    <Label Grid.Row="1" Grid.Column="0" Content="Choose item:" HorizontalContentAlignment="Right"/>
    <ComboBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" IsTextSearchEnabled="True" IsEditable="True" ItemsSource="{Binding Items, Mode=OneWay}" SelectedValuePath="Value" DisplayMemberPath="Key" Text="{Binding ItemsText}"/>

    <Button Grid.Row="2" Grid.Column="1" Click="Button_Click">Switch</Button>
  </Grid>
</Window>
